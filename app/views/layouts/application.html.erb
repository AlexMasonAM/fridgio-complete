<!DOCTYPE html>
<html>
<head>
  <title>Fridgio</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app='fridgioApp'>

<% if current_user %>
  <%= link_to "Logout", logout_path, method: :delete %>
<% else %>
  <%= link_to "Login", login_path %> or <%= link_to "Signup", new_user_path %>
<% end %>

<%= yield %>

</body>
</html>
